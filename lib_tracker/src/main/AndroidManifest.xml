<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.travel.driveassistant.tracker">

    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
    <application>
        <service
            android:name="com.travel.driveassistant.tracker.services.LocationService"
            android:exported="false"/>

        <!-- Service that provides activity recognition data. Setting the android:exported attribute
        to "false" stops other apps from starting this service, even when using an explicit
        intent. -->
        <service
            android:name="com.travel.driveassistant.tracker.services.DetectedActivitiesIntentService"
            android:exported="false" />
    </application>

</manifest>